<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/basket" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="30sp" android:textColor="#000" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/correct" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Correct : " android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
    <TextView android:textSize="30sp" android:textColor="#000" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/wrong" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Incorrect : " android:layout_below="@+id/correct" android:layout_centerHorizontal="true" />
    <Button android:textColor="#000" android:id="@+id/next" android:background="#fa9f9f" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Next" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
    <TextView android:textSize="30sp" android:textStyle="bold" android:textColor="#000" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your Score" android:layout_above="@+id/correct" android:layout_centerHorizontal="true" />
</RelativeLayout>
